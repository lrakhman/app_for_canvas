<div class="container">

<div class="welcome">
	<h2>Welcome! Here are the current courses that we offer:</h2>
</div>

<div class="courses">
	<% @courses.each do |course| %>
		<h2><%= link_to course['name'], course_path(course['id'], page: @page) %></h2>
	<% end %>
</div>

<div class="links">
	<span><%if @prev_course_info.nil? %>
				<%= 'Previous'%>
				<%else%>
				<%=link_to('Previous', courses_path(page: @prev_course_info)) %>
				<%end%>
	</span>
	<span id="next"><%if @next_course_info.nil? %> 
									<%= 'Next'%>
									<%else%>
									<%=link_to('Next', courses_path(page: @next_course_info)) %>
									<%end%>
	</span>
</div>

</div>
